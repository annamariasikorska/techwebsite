<style lang="postcss">
  .question {
    border-bottom: none;

    @media (--screen-tb-max) {
      height: 100%;
      min-height: 0;
    }
  }

  .header {
    grid-column: 1 / 3;
  }

  .content {
    display: flex;
    grid-column: 5 / 13;
    gap: 24px;

    @media (--screen-tb-max) {
      grid-column: 1 / 9;
    }

    @media (--screen-xs-max) {
      grid-column: 1 / 5;
    }
  }

  .text {
    font-size: var(--font-size-l);

    @media (--screen-mc-max) {
      font-size: var(--font-size-l-mobile);
    }

    @media (--screen-tb-max) {
      padding-bottom: 4px;
    }

    @media (--screen-xs-max) {
      font-size: var(--font-size-m-mobile);
    }
  }

  .list {
    margin-bottom: var(--space-m);

    @media (--screen-tb-max) {
      margin-top: 4px;
      margin-bottom: 30px;
    }
  }

  .item {
    display: flex;
    gap: 8px;
  }

  .emoji {
    flex-shrink: 0;
    width: 24px;
    padding-top: 2px;
    font-size: 80%;
    font-style: normal;

    img {
      width: 100%;
      height: auto;
    }
  }

  .footer {
    display: flex;
    grid-column: 7 / 13;
    gap: 32px;
    align-items: center;
    margin-top: auto;

    @media (--screen-tb-max) {
      flex-wrap: wrap;
      grid-column: 1 / 9;
      margin-top: 32px;
    }

    @media (--screen-xs-max) {
      grid-column: 1 / 5;
    }
  }

  .button-container {
    display: flex;
    gap: 24px;
  }
</style>
